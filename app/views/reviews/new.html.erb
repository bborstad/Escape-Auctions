<%= render "layouts/navbar" %>

<div class="jumbotron">
  <h1 class="display-3">New Review</h1>
  <p class="lead"> Feeback matters to our Sellers. Please submit the form below to leave a review.</p>
  <hr class="my-4">



<%= form_with url: "/auctions/#{params[:id]}/reviews/", method: :post do |form| %>

 <div>
   <%= form.label :name %><br>
   <%= form.text_field :name %>
 </div>

 <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
 </div>
  
 <div>
    <%= form.label :message %><br>
    <%= form.text_area :message %>
 </div>

<%= form.submit "Post Review" %>  
<% end %>
