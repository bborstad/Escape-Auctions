<%= render "layouts/navbar" %>

<h1>Edit Question</h1>

<%= form_with model: auction, url: auction_path, method: :patch, local: true, scope: :auction do |f| %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :starting_bid %><br>
    <%= f.text_field :starting_bid %>
  </div>


  <div>
    <%= f.label :buy_now_price %><br>
    <%= f.text_field :buy_now_price %>
  </div>

  <div>
    <%= f.label :expire_date %><br>
    <%= f.text_field :expire_date %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image%>
  </div>

  <div>
    <%= f.input :tag_list %>
  </div>

  <%= f.submit 'Update Auction' %>

<% end %>
